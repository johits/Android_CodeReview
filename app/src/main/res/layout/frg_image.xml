<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.example.naversearch.fragment.ImageFragment" />

        <variable
            name="naverModel"
            type="com.example.naversearch.model.NaverModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="이미지 검색어를 입렵해주세요"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() ->naverModel.search(etImage.getText().toString())}"
                android:text="검색"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_image_get"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:onClick="@{() -> naverModel.lookUp(rvImage)}"
                android:text="조회"
                android:textSize="13sp" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="GridLayoutManager"
            app:spanCount="3" />

    </LinearLayout>
</layout>